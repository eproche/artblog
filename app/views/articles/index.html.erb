<div class ='title'>
<h1>Gallery Entries</h1>
</div>
<p></p>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="4"></th>
  </tr>
 

  <% @article.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Remove', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p></p>
<div class ='title'>
<h2>Add some new artwork</h2>
</div>
<p></p>

<table>
<tr>
<th><%= link_to 'New Entry', new_article_path %></th>
<tr>
</table>